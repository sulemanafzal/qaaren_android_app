<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QaarenApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray</item>
        <!-- Customize your theme here. -->
    </style>
<!--
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/black</item>
    </style>-->
    <!--circular imageview-->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/yello</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">

        <item name="colorControlActivated">@color/blue</item>

        <item name="colorSwitchThumbNormal">#f1f1f1</item>

    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SelectedTabStyle">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="UnselectedTabStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabLayoutStyleInDetail" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>